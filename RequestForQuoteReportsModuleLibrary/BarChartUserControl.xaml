<UserControl x:Class="RequestForQuoteReportsModuleLibrary.BarChartUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
             xmlns:CustomCntls="clr-namespace:WPFStyley_Metallic4.CustomControls;assembly=WPFStyley_Metallic4">
    <Grid Height="500" Width="650">
        <CustomCntls:MetallicBorder WpfsCornerRadius="4" />
        <chartingToolkit:Chart Margin="30" Title="{Binding ReportTitle}">
            <chartingToolkit:ColumnSeries DependentValuePath="Value" IndependentValuePath="Key" ItemsSource="{Binding ReportData}" />
        </chartingToolkit:Chart>
    </Grid>
</UserControl>
