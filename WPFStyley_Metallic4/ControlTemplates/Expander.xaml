							<Setter TargetName="Row0"
									Property="Height"
									Value="25" />
							<Setter TargetName="Row1"
									Property="Height"
									Value="0" />
							<Setter TargetName="Col0"
									Property="Width"
									Value="*" />
							<Setter TargetName="Col1"
									Property="Width"
