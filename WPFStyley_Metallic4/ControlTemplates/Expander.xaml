							<Setter TargetName="Border2"
									Property="BorderThickness"
									Value="0,0,1,0" />
							<Setter TargetName="ContentBorder1"
									Property="BorderThickness"
									Value="1,0,0,1" />
							<Setter TargetName="ContentBorder"
